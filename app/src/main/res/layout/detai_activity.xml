<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detai_activity"
    tools:context="com.hendrabratanata.moviecatalog.Activity.DetaiMovie"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/img_BackDrop"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/judul"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"

        >
        <TextView
            android:id="@+id/tv_reting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reting"
            android:layout_margin="2dp"
            android:layout_weight="0.25"
            />

        <TextView
            android:id="@+id/tv_rilis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reting"
        android:layout_margin="2dp"
        android:layout_weight="0.25"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bahasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reting"
            android:layout_margin="2dp"
            android:layout_weight="0.25"
            />
        <TextView
            android:id="@+id/tv_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reting"
            android:layout_margin="2dp"
            android:layout_weight="0.25"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"/>

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_favorite_mist_120dp"
        android:id="@+id/btn_addFavorite"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@string/favorite"
        android:layout_marginBottom="160dp"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"/>

</LinearLayout>
</ScrollView>